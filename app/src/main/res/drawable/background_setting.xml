<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:top="-2dp" android:right="-2dp" android:left="-2dp">
        <shape>

            <stroke  android:color="@color/hintEdittext" android:width="0.2dip"></stroke>
            <solid android:color="@color/hintEdittext"></solid>


        </shape>

    </item>

    <item android:state_pressed="false" android:top="-2dp" android:right="-2dp" android:left="-2dp">
        <shape>

            <stroke android:color="@color/hintEdittext" android:width="0.2dip"></stroke>
            <solid android:color="@color/commomtext"></solid>


        </shape>

    </item>

</selector>